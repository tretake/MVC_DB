@model IEnumerable<Jogo>

@{
    ViewData["Title"] = "Jogos";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table text-center">
            <thead>
                <th>@Html.DisplayNameFor(model => model.CapaImg)</th>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.DataLancamento)</th>
                <th>@Html.DisplayNameFor(model => model.Id_Dev)</th>
                <th>plataformas</th>
                <th>Opções</th>
            </thead>
            <tbody>
                @foreach (var registro in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img width="300" src="@registro.CapaImg">
                            </td>
                        <td class="align-middle">@Html.DisplayFor(modelIten => registro.Nome)</td>
                        <td class="align-middle">@Html.DisplayFor(modelIten => registro.DataLancamento)</td>
                        <td class="align-middle">
                            <img width="100" src="@registro.desenvolvedor.LogoImg">
                            </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary" ><i class="bi bi-pencil-square"></i>Editar</a> |
                            <a class="btn btn-info"><i class="bi bi-eye"></i>Detalhes</a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position: fixed; bottom: 25px; right: 25px" class="white-text">
    <a asp-action="Create" class="btn btn-success"> <i class="bi-plus-circle"></i> adicionar novo</a>
</div>